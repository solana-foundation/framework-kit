{
	"compilerOptions": {
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@solana/client": ["../../packages/client/src/index.ts"],
			"@solana/client/*": ["../../packages/client/src/*"],
			"@solana/react-hooks": ["../../packages/react-hooks/src/index.ts"],
			"@solana/react-hooks/*": ["../../packages/react-hooks/src/*"]
		}
	},
	"include": ["vite.config.ts"]
}
