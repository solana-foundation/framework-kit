{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["pnpm-lock.yaml"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "build/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"outputs": []
		},
		"format": {
			"cache": false
		},
		"test": {
			"outputs": []
		},
		"test:e2e": {
			"dependsOn": ["^build"],
			"outputs": [],
			"cache": false
		},
		"docs": {
			"dependsOn": ["build"],
			"outputs": ["docs/**"]
		},
		"docs:json": {
			"dependsOn": ["build"],
			"outputs": ["docs/api.json"]
		},
		"typecheck": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"check:circular-deps": {
			"outputs": []
		}
	}
}
